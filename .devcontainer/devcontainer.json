{
  "name": "rust-server-dev",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "runArgs": ["-p", "3215:3215"],
  "mounts": [
    "source=${localWorkspaceFolder}/../target,target=/workspaces/target/,type=bind,consistency=cached"
  ],
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      },
      "extensions": [
        "dustypomerleau.rust-syntax",
        "rust-lang.rust-analyzer",
        "fill-labs.dependi",
        "vadimcn.vscode-lldb",
        "tamasfe.even-better-toml",
        "MS-CEINTL.vscode-language-pack-ja"
      ]
    }
  },
  "remoteUser": "root",
  "workspaceFolder": "/workspaces/PortfolioServerZone"
}
